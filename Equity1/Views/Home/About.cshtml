@{
    ViewBag.Title = "About";
}
<div class="page" id="About">
    <section class="supergirl">
        <!-- Supergirl -->
        <img class="img-responsive WideImage" src="~/Images/SuperGirl.jpg" alt="Girl in Cape from Global Goals Getty Images" />
    </section> <!-- Supergirl -->
    <section class="WhatIsEquity">
        <!-- What -->
        <div class="backgroundQ spacedbanner">
            <h1 class="frontOfQ banner">WHAT IS EQUITY?</h1>
        </div>
        <div class="container-fluid">
            <div class="row">
                <!-- Spacer -->
                <div class="col-sm-12 WhatIsEqHeadFoot">
                    <div class="statement"></div>
                </div>
            </div> <!-- Spacer -->
            <div class="row">
                <div class="col-sm-4 hvcenter minheight">
                    <div class="displayflex">
                        <div class="centereddiv">
                            <h4 class="desctext">Provocative platform to end gender, racial, and religious stereotypes that feed global inequity</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4 hvcenter separator minheight">
                    <div class="displayflex">
                        <div class="centereddiv">
                            <h4 class="desctext">2017 Focus is GENDER EQUITY, recognizing the intersectionality across race and religion</h4>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 hvcenter minheight">
                    <div class="displayflex ">
                        <div class="centereddiv ">
                            <h4 class="desctext">Event takes place March, 2018 – International Women's Month</h4>
                        </div>
                    </div>
                </div>
            </div> <!--row-->
            <div class="row">
                <!-- Spacer -->
                <div class="col-sm-12 WhatIsEqHeadFoot">
                    <div class="statement"></div>
                </div>
            </div> <!-- Spacer -->
        </div>
    </section> <!-- What -->

    <h2>partners with reference to Global Goals (popup?)</h2>
    <h3>UN</h3>
    <h3>Global Citizen</h3>

    <h3>Bottom of page</h3>
    <!-->Move mosaic and room to DAMN page-->
    <section class="mosaic">
        <div class="MosaicImage">
            <div class="row">
                <img class="img-responsive col-sm-12" src="~/Images/Mosaic.jpg" alt="Digital Mosaic" />
                <div class="row">
                    <div>
                        <h3><span class="col-sm-8 col-sm-offset-2">Launch of D.A.M.N, an artistic digital visualization platform of 7B pixels, driving a mosaic of global actions</span></h3>
                        <h4><span class="col-sm-8 col-sm-offset-2">Digital Accountability Mosaic Network Give a D.A.M.N.</span></h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="DAMNroom">
        <div class="RoomImage">
            <img class="img-responsive" src="~/Images/SlideWithDAMN.png" />
            <div class="row">
                <h4><span class="col-sm-8 col-sm-offset-2">Digital Installation with Interactive Touch Technology, extended online & via EQUITY App</span></h4>
            </div>
        </div>
    </section>
    <section class="GlobalGoals">
        <div class="row">
            <div class="col-sm-10 col col-sm-offset-1">
                <h3>The actions will focus on Global Goal #5 Gender Equality, recognizing interdependencies across all goals</h3>
                <img class="img-responsive WideImage" src="~/Images/GlobalGoals.jpg" alt="Image of the 17 Global Goals" />
            </div>
        </div>
    </section>
    <section class="partners">
        <div>
            <h2 class="sectionTilte">
                Who is supporting EQUITY?
            </h2>
            <h3>
                In collaboration with the UN's Sustainable Development Goals, In Compact, and Global Citizen
                Partnering with leading global corporations and NGOs
            </h3>
            <div class="row">
                <img class="img-responsive col-sm-9" src="~/Images/UNLogoSDG.png" alt="The UN Sustainable Goals Logo" />
                <img class="img-responsive col-sm-3" src="~/Images/GlobalCitizenLogo.png" alt="The Global Citizen Logo" />
            </div>
        </div>
    </section>
    <section class="EquityGoal">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-2">
                <div><img src="~/Images/GlobalGoalsColorWheel.jpg" alt="The Global Goals Color Wheel" /></div>
                <div><img src="~/Images/Woman in Car.jpg" alt="Global Goals woman In Car from Getty Images" /></div>
            </div>
            <div class="col-sm-4">
                <div class="sectionTilte"><br /><br />What is EQUITY's goal?<br /><br /></div>
                <ul>
                    <li><h4>To ignite measurable actions towards achieving GENDER EQUALITY in the path to achieve the GLOBAL GOALS by 2030</h4></li>
                    <li><h4>Event planned for March 2018 during Global Goals week & UN General Assembly</h4></li>
                </ul>
            </div>
        </div> <!--row-->
    </section>
</div>

@{
    ViewBag.Title = "Home";
}

<div class="page" id="index">
    <section class="DAMNMap">
        <div class="container-fluid">
            <div class="row">
                <img class="img-responsive MapImage" src="../../Images/DAMN Map.jpg" 
                     alt="Digital Accountability Mosaic Network Map (Artwork by Michael Tompsett)"
                     title="Digital Accountability Mosaic Network Map (Artwork by Michael Tompsett)" />
                <h4>Artwork by Michael Tompsett</h4>
            </div>
        </div>
    </section> <!--DAMN Map-->
    <section class="intro repad">
        <div>
            <!--Intro-->
            <div>
                <h1 class="banner spacedbanner"><br />INTRODUCING EQUITY<br /></h1>
                <h4 class="banner">PROJECT FOR ALL<br /><br /></h4>
                <h5 class="center">A <strong>NEW</strong> social good <strong>DISRUPTOR</strong>, driven by passionate global citizens</h5>
            </div>
        </div> <!--Intro-->
    </section>
    <section class="MissionSummary">  <!--Mission Summary-->
        <div>
            <div class="row">
                <!--Spacer-->
                <div class="col-sm-12 MissionSummaryHeadFoot">
                    <div class="statement"></div>
                </div>
            </div><!--Spacer-->
            <div class="row">
                <!-- Statement-->
                <!--Initiative page content condensed-->
                <div class="col-xs-6 col-sm-6 statement separator">
                    <h3 class="banner">OUR MISSION</h3>
                </div>
                <div class="col-xs-6 col-sm-6 statement ">
                    <h3 class="banner">OUR LAUNCH EVENT</h3>
                </div>
            </div> <!-- Statement-->
            <div class="row">
                <!-- Equal sign -->
                <!--Initiative page content condensed--> 
                <div class="col-xs-6 col-sm-6 eqsignbox separator">
                    <h3 class="banner eqsign">=</h3>
                </div>
                <div class="col-xs-6 col-sm-6 eqsignbox ">
                    <h3 class="banner eqsign">=</h3>
                </div> <!--Initiative page content condensed-->
            </div> <!-- Equal sign -->
            <div class="row">
                <!-- desc -->
                <!--Initiative page content condensed-->
                <div class="col-xs-6 col-sm-6 displayflex separator">
                    <div class="centereddiv">
                        <p class="MissionDesc">To end inequity through emotive storytelling, empowering art, and disruptive technology</p>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 displayflex ">
                    <div class="centereddiv">
                        <p class="MissionDesc">EQUITY on March 8th, 2018</p>
                    </div>
                </div> <!--Initiative page content condensed-->
            </div> <!-- desc -->
            <div class="row">
                <!--Spacer-->
                <div class="col-sm-12 MissionSummaryHeadFoot">

                    <div class="statement"></div>
                </div>
            </div><!--Spacer-->

        </div> <!--Initiative page content condensed-->
    </section>
    <section class="EquityGoal">
        <div class="sectionTilte">WHAT IS EQUITY'S GOAL?</div>
        <div class="row EquityGoalContainer">
            <div class="col-sm-10 col-xs-9 EquityGoalText">
                <ul>
                    <li><p class="banner">To ignite measurable actions towards achieving GENDER EQUALITY in the path to achieve the GLOBAL GOALS by 2030</p></li>
                    <li><p class="banner">Event planned for March 2018 during International Women's Month</p></li>
                    <li><sub class="banner">Add comments about launch event</sub></li>
                    <li><p>Using an emotive storyline across VR, AR, visual arts, poetry, music, comedy, and dance</p></li>
                    <li><h5>The Digital Accountability Mosaic Network (D.A.M.N.) will be the centerpiece of the story</h5></li>
                    <li><h5>Launched as an artistic digital interactive installation online, and within the EQUITY app, powered by AI</h5></li>
                </ul>
            </div>
            <div class="col-sm-2 col-xs-3 EquityGoalImage">
                <img class="img-responsive" src="~/Images/GlobalGoalsColorWheel.jpg" alt="The Global Goals Color Wheel" />
            </div>                

        </div>
    </section>

</div>